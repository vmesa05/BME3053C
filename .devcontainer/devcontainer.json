{
  "name": "Copilot Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    6080
  ],
  "waitFor": "onCreateCommand",
  "updateContentCommand": "python3 -m pip install -r requirements.txt",
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "github.copilot",
        "github.copilot-chat",
        "sumneko.lua",
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "tasks": [
        {
          "label": "Open Terminal",
          "command": "workbench.action.terminal.new",
          "type": "command",
          "runAtStartup": true
        }
      ]
    }
  }
}